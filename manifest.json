{
  "manifest_version": 3,
  "name": "Panelize",
  "version": "1.0.1",
  "description": "Compare AI assistants side by side in one window. Send one prompt and review responses faster.",
  "default_locale": "en",

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],

  "host_permissions": [
    "*://chatgpt.com/*",
    "*://chat.openai.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://grok.com/*",
    "*://chat.deepseek.com/*",
    "*://www.kimi.com/*",
    "*://kimi.com/*",
    "*://www.google.com/*",
    "*://google.com/*",
    "*://api.github.com/*",
    "*://raw.githubusercontent.com/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },


  "options_page": "options/options.html",

  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "__MSG_actionDefaultTitle__"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open Panelize"
    },
    "open-prompt-library": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "__MSG_commandOpenPromptLibrary__"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },


  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-chatgpt.js",
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/focus-toggle.js"
      ],
      
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-claude.js",
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/focus-toggle.js"
      ],
      
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-gemini.js",
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/focus-toggle.js"
      ],
      
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["https://grok.com/*"],
      "js": [
        "content-scripts/button-finder-utils.js",
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-grok.js",
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/focus-toggle.js"
      ],
      
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": [
        "content-scripts/button-finder-utils.js",
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-deepseek.js",
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/focus-toggle.js"
      ],
      
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["https://www.kimi.com/*", "https://kimi.com/*"],
      "js": [
        "content-scripts/button-finder-utils.js",
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-kimi.js",
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/focus-toggle.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["https://www.google.com/search*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-google.js",
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/focus-toggle.js"
      ],
      
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "bypass_headers",
        "enabled": true,
        "path": "rules/bypass-headers.json"
      }
    ]
  },

  "web_accessible_resources": [
    {
      "resources": [
        "data/prompt-libraries/default-prompts.json",
        "data/prompt-libraries/default-prompts-zh_CN.json",
        "data/prompt-libraries/custom-prompt-template.json",
        "data/prompt-libraries/guide.en.html",
        "data/prompt-libraries/guide.zh_CN.html",
        "data/prompt-libraries/guide.zh_TW.html",
        "data/prompt-libraries/guide.ko.html",
        "data/prompt-libraries/guide.ja.html",
        "data/prompt-libraries/guide.es.html",
        "data/prompt-libraries/guide.fr.html",
        "data/prompt-libraries/guide.de.html",
        "data/prompt-libraries/guide.it.html",
        "data/prompt-libraries/guide.ru.html",
        "data/version-info.json",
        "_locales/en/messages.json",
        "_locales/zh_CN/messages.json",
        "_locales/zh_TW/messages.json",
        "multi-panel/multi-panel.html",
        "multi-panel/multi-panel.js",
        "multi-panel/multi-panel.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
